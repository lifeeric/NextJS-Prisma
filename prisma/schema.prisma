// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider          = "postgresql"
    url               = env("POSTGRES_PRISMA_URL")
    directUrl         = env("POSTGRES_URL_NON_POOLING")
}

model User {
    id         Int      @id @default(autoincrement())
    VendorName String
    Date       DateTime
    orders     Order[]
}

model Order {
    id          Int    @id @default(autoincrement())
    ModelNumber String
    UnitPrice   Float
    Quantity    Int
    OwnerId     Int
    Owner       User   @relation(fields: [OwnerId], references: [id])
}
